{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "inspecta report",
  "type": "object",
  "required": ["report_version", "generated_at", "agent", "device", "summary", "scores", "tests", "artifacts"],
  "properties": {
    "report_version": {"type": "string"},
    "generated_at": {"type": "string", "format": "date-time"},
    "agent": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {"name": {"type": "string"}, "version": {"type": "string"}}
    },
    "device": {"type": "object"},
    "mode": {"type": "string"},
    "profile": {"type": "string"},
    "summary": {
      "type": "object",
      "required": ["overall_score", "grade", "recommendation"],
      "properties": {
        "overall_score": {"type": "integer"},
        "grade": {"type": "string"},
        "recommendation": {"type": "string"}
      }
    },
    "scores": {"type": "object"},
    "tests": {"type": "array"},
    "artifacts": {"type": "array", "items": {"type": "string"}},
    "evidence": {"type": "object"}
  }
}
